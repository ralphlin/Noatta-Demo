<header>
  <table class="header">
    <tr>
      <td class = "header_narrow">
          <%= link_to logo, root_path %>
      </td>
      <% if @noheader.nil? & signed_in? %>
        <td class = "header_narrow_text">
          <h1 class="page_title"><%= @title %></h1>
        </td>
        <td class="header_profile">
          <%= gravatar_for @user %><br />
          <%= @user.name %>
        </td>
      <% end %>
    </tr>
  </table>
  <br />
  <% if @noheader.nil? & @nonav.nil? %>
    <nav>
      <ul>
        <% if signed_in? %>
          <% if @user.admin? %>
            <li><%= link_to "Users", users_path %></li>
          <% end %>
          <li><%= link_to "Profile", profile_path %></li>
          <li><%= link_to "Account Settings", edit_user_path(current_user) %></li>
        <% else %>
          <li><%= link_to "Home", root_path %></li>  
        <% end %>
        <li><%= link_to "Help", help_path %></li>
        <% if signed_in? %>
          <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
        <% else %>
          <li><%= link_to "Sign in", signin_path %></li>
        <% end %>
      </ul>
    </nav>
  <% end %>
</header>